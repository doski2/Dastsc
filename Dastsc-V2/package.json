{
  "name": "dastsc-nexus",
  "private": true,
  "version": "1.0.0",
  "description": "Nexus DMI v3.1 for Railworks",
  "author": "Dastsc",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "npm run electron",
    "build": "tsc -b && vite build",
    "sync:dist": "sync-dist.bat",
    "electron:build": "npm run build && electron-builder --dir",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "build": {
    "appId": "com.dastsc.nexus",
    "productName": "Dastsc Nexus DMI",
    "win": {
      "target": "dir",
      "icon": null
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "package.json",
      "backend/**/*"
    ],
    "asar": false
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.7.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
